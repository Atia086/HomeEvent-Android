<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yolo.michael.yolo.fragment.contact.ContactDetailFragment"
    android:clickable="true"
    android:background="@color/white">


    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/profile_network_image_view_contact_detail_fragment"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@mipmap/logo_try_again"/>

    <TextView
        android:id="@+id/contact_last_name_text_view_contact_detail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_network_image_view_contact_detail_fragment"
        android:textSize="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/contact_first_name_text_view_contact_detail_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/profile_network_image_view_contact_detail_fragment"
        android:layout_below="@id/contact_last_name_text_view_contact_detail_fragment"
        android:textSize="20dp"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>
