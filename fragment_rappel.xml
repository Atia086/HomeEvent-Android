<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.rappel.RappelFragment"
    android:background="@color/white"
    android:clickable="true">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recall_recycler_view_fragment_rappel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add_new_recall_button_fragment_rappel"/>

    <Button
        android:id="@+id/add_new_recall_button_fragment_rappel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/add_new"/>

</RelativeLayout>
