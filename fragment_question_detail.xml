<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yolo.michael.yolo.fragment.historic.QuestionDetailFragment"
    android:background="@color/white"
    android:clickable="true">

    <TextView
        android:id="@+id/question_place_holder_text_view_detail_question_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_placeholder_detail"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/question_content_text_view_detail_question_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/question_place_holder_text_view_detail_question_fragment"
        android:layout_marginBottom="5dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/selected_contacts_recycler_view_detail_question_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/question_content_text_view_detail_question_fragment"/>

</RelativeLayout>
