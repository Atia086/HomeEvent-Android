<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Event.EventCreationFragment"
    android:gravity="center"
    android:clickable="true"
    android:background="@color/white">

    <!-- TODO: Update blank fragment layout -->
    <Button
        android:id="@+id/meal_button_event_creation_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_widthPercent="75%"
        app:layout_heightPercent="15%"
        android:layout_centerHorizontal="true"
        app:layout_marginBottomPercent="7.5%"
        android:text="@string/meal"/>

    <Button
        android:id="@+id/hangout_button_event_creation_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meal_button_event_creation_activity"
        app:layout_widthPercent="75%"
        app:layout_heightPercent="15%"
        android:layout_centerHorizontal="true"
        android:text="@string/hangout"/>

</android.support.percent.PercentRelativeLayout>
