<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Event.WhosBringingWhatFragment"
    android:background="@color/white"
    android:clickable="true">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/participative_text_view_whos_bringing_what_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/participative"
        android:textSize="25dp"
        android:layout_marginRight="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Switch
        android:id="@+id/participative_switch_whos_bringing_what_fragment"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/participative_text_view_whos_bringing_what_fragment"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/item_name_edt_text_whos_bringing_what_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/participative_switch_whos_bringing_what_fragment"
        android:hint="@string/item_name"
        android:visibility="invisible"/>

    <EditText
        android:id="@+id/item_number_edit_text_whos_bringing_what_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name_edt_text_whos_bringing_what_fragment"
        android:hint="@string/item_number"
        android:inputType="number"
        android:visibility="invisible"/>

    <Spinner
        android:id="@+id/item_type_spinner_whos_bringing_what_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_number_edit_text_whos_bringing_what_fragment"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/item_add_button_whos_bringing_what_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_type_spinner_whos_bringing_what_fragment"
        android:text="@string/add"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/items_recycler_view_whos_bringing_what_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_add_button_whos_bringing_what_fragment"
        android:layout_above="@+id/next_button_whos_bringing_what_fragment"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/next_button_whos_bringing_what_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
