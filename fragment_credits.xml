<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yolo.michael.yolo.fragment.credits.CreditsFragment"
    android:background="@color/white"
    android:clickable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/logo_image_view_credits_fragment"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:background="@mipmap/logo_try_again"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/version_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/versionning"
                android:layout_below="@id/logo_image_view_credits_fragment"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/lead_dev_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lead_dev"
                android:layout_below="@id/version_text_view_credits_fragment"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/mitoul_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lead_dev_text_view_credits_fragment"
                android:text="@string/mitoul"
                android:layout_below="@id/version_text_view_credits_fragment"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/other_devs_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/other_devs"
                android:layout_below="@id/lead_dev_text_view_credits_fragment"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/me_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/lead_dev_text_view_credits_fragment"
                android:layout_toRightOf="@id/other_devs_text_view_credits_fragment"
                android:text="@string/me"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/scott_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/me_text_view_credits_fragment"
                android:layout_toRightOf="@id/other_devs_text_view_credits_fragment"
                android:text="@string/scott"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/special_thanks_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/special_thanks"
                android:layout_below="@id/scott_text_view_credits_fragment"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/yvan_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/scott_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/yvan"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/axel_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/special_thanks_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/axel"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:id="@+id/antoine_text_view_credits_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/axel_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/antoine"/>

            <TextView
                android:id="@+id/fabrice_text_view_credits_fragment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/antoine_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/fabrice"/>

            <TextView
                android:id="@+id/joris_text_view_credits_fragment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fabrice_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/joris"/>

            <TextView
                android:id="@+id/david_text_view_credits_fragment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/joris_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/david"/>

            <TextView
                android:id="@+id/cathy_text_view_credits_fragment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/david_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/cathy"/>

            <TextView
                android:id="@+id/laurence_text_view_credits_fragment"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cathy_text_view_credits_fragment"
                android:layout_toRightOf="@id/special_thanks_text_view_credits_fragment"
                android:text="@string/laurence"/>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
